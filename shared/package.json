{
  "name": "@toboo/shared",
  "version": "0.0.16",
  "description": "toboo.shared",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "clean": "del ./dist/*",
    "copy-files": "copyfiles ./src/**/*.sql ./dist/",
    "build": "npm run clean && tsc -p  tsconfig.build.json",
    "start": "tsx --no-warnings src/index.ts  --tsconfig tsconfig.build.json",
    "development": "npm run start ",
    "test": " DOTENV_CONFIG_PATH=.env.test node --no-warnings --experimental-vm-modules  node_modules/jest/bin/jest.js --setupFiles=dotenv/config",
    "test:ci": "node --no-warnings --experimental-vm-modules  node_modules/jest/bin/jest.js"
  },
  "keywords": [
    "toboo",
    "node",
    "shared"
  ],
  "author": "kulubaev",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "dompurify": "^3.1.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "formidable": "^3.5.1",
    "jsdom": "^24.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg-promise": "^11.6.0",
    "rand-token": "^1.0.1",
    "redis": "^4.6.13",
    "uuidv7": "^0.6.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/formidable": "^3.4.5",
    "@types/jsdom": "^21.1.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "jest": "^29.7.0",
    "pg-mem": "^2.8.1",
    "pg-monitor": "^2.1.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
